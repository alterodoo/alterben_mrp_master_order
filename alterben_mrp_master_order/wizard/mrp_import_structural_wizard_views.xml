<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario del Wizard -->
    <record id="view_mrp_import_structural_wizard_form" model="ir.ui.view">
        <field name="name">mrp.import.structural.wizard.form</field>
        <field name="model">mrp.import.structural.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Estructural">
                <group>
                    <group>
                        <field name="file" filename="filename"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="create_quotation"/>
                    </group>
                </group>
                <footer>
                    <button name="action_import_structural" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_mrp_import_structural_wizard" model="ir.actions.act_window">
        <field name="name">Importar Estructural</field>
        <field name="res_model">mrp.import.structural.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Acción de servidor para menú/árbol de OF -->
    <record id="action_mrp_production_import_structural" model="ir.actions.server">
        <field name="name">Importar Estructural</field>
        <field name="model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">action = env.ref('alterben_mrp_master_order.action_mrp_import_structural_wizard').read()[0]</field>
    </record>

    <!-- Elemento de Menú (Ubicado en Fabricación / Operaciones) -->
    <menuitem id="menu_mrp_import_structural_wizard"
              name="Importar Estructural"
              parent="mrp.menu_mrp_manufacturing"
              action="action_mrp_import_structural_wizard"
              sequence="99"
              groups="mrp.group_mrp_user,mrp.group_mrp_manager,base.group_system"/>
</odoo>
