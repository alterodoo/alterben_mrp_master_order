<odoo>
    <record id="view_pvb_cabina_inv_wizard" model="ir.ui.view">
        <field name="name">pvb.cabina.inv.wizard.form</field>
        <field name="model">pvb.cabina.inv.wizard</field>
        <field name="arch" type="xml">
            <form string="Consumir INV (cabina)">
                <group col="2">
                    <field name="line_id" invisible="1"/>
                    <field name="product_code" readonly="1" class="oe_inline" string="CÃ³digo producto"/>
                    <field name="product_display" readonly="1" class="oe_inline" string="Producto"/>
                </group>
                <group>
                    <field name="consume_line_ids">
                        <tree editable="bottom">
                            <field name="recipe_id" string="Receta" style="min-width:180px" column_invisible="1"/>
                            <field name="product_id" string="Producto" readonly="1" style="min-width:220px"/>
                            <field name="available_qty" string="En cabina" readonly="1" style="width:80px"/>
                            <field name="consume_qty" string="Consumir" style="width:80px"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
