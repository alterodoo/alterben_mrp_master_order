<odoo>
  <record id="view_picking_form_inherit_control_total" model="ir.ui.view">
    <field name="name">stock.picking.form.control.total</field>
    <field name="model">stock.picking</field>
    <field name="active">0</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_view_control_total_labels" type="object"
                string="Etiquetas"/>
        <button name="action_preassign_control_total" type="object"
                string="Pre Asignar Etiquetas" class="btn-secondary"/>
      </xpath>
      <!-- Add per-move button inside embedded stock.move tree on Operations page -->
      <xpath expr="//page[@name='operations']//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
        <field name="ct_fully_labeled"/>
        <field name="ct_label_range"/>
        <button name="action_open_control_total_move_wizard" type="object" string="Seguro CT" class="btn-secondary"/>
      </xpath>
    </field>
  </record>

  <!-- Insert the range column in the move lines tree used by pickings -->
  <record id="view_move_line_tree_inherit_control_total" model="ir.ui.view">
    <field name="name">stock.move.line.tree.control.total</field>
    <field name="model">stock.move.line</field>
    <field name="active">0</field>
    <field name="inherit_id" ref="stock.view_move_line_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='quantity']" position="after">
        <field name="x_control_total_range" readonly="1"/>
      </xpath>
      <xpath expr="//field[@name='product_id']" position="after">
        <button name="action_open_control_total_line_wizard"
                type="object" string="Seguro CT" class="btn-secondary"/>
      </xpath>
    </field>
  </record>
</odoo>
