<odoo>
    <record id="view_receta_pvb_tree" model="ir.ui.view">
        <field name="name">receta.pvb.tree</field>
        <field name="model">receta.pvb</field>
        <field name="arch" type="xml">
            <tree editable="bottom" default_order="product_default_code asc">
                <field name="active"/>
                <field name="mold_code" string="Molde"/>
                <field name="product_default_code"/>
                <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="alto"/>
                <field name="ancho"/>
                <field name="area_m2"/>
                <field name="v1"/>
                <field name="v2"/>
                <field name="c1"/>
                <field name="c2"/>
                <field name="ficha"/>
                <field name="num_pvb"/>
                <field name="pvb"/>
                <field name="ancho_rollo"/>
                <field name="longitud_corte"/>
                <field name="longitud_corte"/>
                <field name="area_pvb_m2"/>
                <field name="existencia_minima"/>
                <field name="existencia_maxima"/>
                <field name="cant_moldes"/>
                <field name="piezas_cabina" string="Piezas en cabina"/>
                <button string="Historial" type="object" name="action_open_cabina_history" class="btn-secondary" icon="fa-clock-o"/>
            </tree>
        </field>
    </record>

    <record id="view_receta_pvb_search" model="ir.ui.view">
        <field name="name">receta.pvb.search</field>
        <field name="model">receta.pvb</field>
        <field name="arch" type="xml">
            <search>
                <field name="mold_code" string="Molde"/>
                <field name="product_id"/>
                <field name="pvb"/>
                <filter string="Activas" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="action_receta_pvb" model="ir.actions.act_window">
        <field name="name">Recetas PVB</field>
        <field name="res_model">receta.pvb</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_receta_pvb_tree"/>
        <field name="search_view_id" ref="view_receta_pvb_search"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_receta_pvb"
              name="Recetas PVB"
              parent="menu_mrp_master_root"
              action="action_receta_pvb"
              sequence="50"/>
</odoo>
