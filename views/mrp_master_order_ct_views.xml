<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Banner y estado de CT en Orden Maestra -->
  <record id="view_mrp_master_order_form_ct_banner" model="ir.ui.view">
    <field name="name">mrp.master.order.form.ct.banner</field>
    <field name="model">mrp.master.order</field>
    <field name="active">1</field>
    <field name="inherit_id" ref="alterben_mrp_master_order.view_mrp_master_order_form_opt_split"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <field name="ct_banner_html" widget="html" nolabel="1" modifiers="{'invisible': [('is_opt_stage','=', False)]}"/>
      </xpath>
    </field>
  </record>

  <!-- CT en Inspeccion final - Botones y columnas para la vista de Ã¡rbol -->
  <record id="view_mrp_master_order_line_tree_ct_inspeccion_final" model="ir.ui.view">
    <field name="name">mrp.master.order.line.tree.ct.inspeccion.final</field>
    <field name="model">mrp.master.order.line</field>
    <field name="inherit_id" ref="alterben_mrp_master_order.view_mrp_master_order_line_tree_tab"/>
    <field name="active">1</field>
    <field name="priority">100</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_id']" position="after">
        <!-- Campo para mostrar el rango de etiquetas CT -->
        <field name="ct_label_range" string="Etiquetas CT" readonly="1"
               column_invisible="context.get('mrp_tab') != 'inspeccion_final'" optional="show"/>
      </xpath>
      <xpath expr="//field[@name='ct_label_range']" position="after">
        <!-- Boton por linea para abrir el wizard de Control Total en Inspeccion Final -->
        <button name="action_open_control_total_wizard" type="object" string="Seguro CT" class="btn-secondary"
                column_invisible="context.get('mrp_tab') != 'inspeccion_final'"/>
      </xpath>
    </field>
  </record>
</odoo>
