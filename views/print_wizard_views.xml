<odoo>
    <record id="view_mrp_master_print_wizard_form_curvado" model="ir.ui.view">
        <field name="name">mrp.master.print.wizard.form.curvado</field>
        <field name="model">mrp.master.print.wizard</field>
        <field name="arch" type="xml">
            <form string="Imprimir" create="false" edit="false" js_class="mrp_master_print_wizard_form">
                <group>
                    <field name="master_id" readonly="1"/>
                    <field name="report_kind_curvado" string="Reporte"/>
                    <field name="curvado_sub" string="Horno / Turno" required="1" class="o_field_curvado_sub"/>
                    <field name="report_date" modifiers="{'invisible': [('report_kind_curvado','!=','referencia_produccion')], 'required': [('report_kind_curvado','=','referencia_produccion')]}"/>
                    <field name="process_employee_id" modifiers="{'invisible': [('report_kind_curvado','!=','referencia_produccion')], 'required': [('report_kind_curvado','=','referencia_produccion')]}"/>
                    <field name="notes" placeholder="Notas adicionales para el reporte"/>
                </group>
                <footer>
                    <button name="action_print" string="Imprimir" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_mrp_master_print_wizard_form_opt" model="ir.ui.view">
        <field name="name">mrp.master.print.wizard.form.opt</field>
        <field name="model">mrp.master.print.wizard</field>
        <field name="arch" type="xml">
            <form string="Imprimir" create="false" edit="false">
                <group>
                    <field name="master_id" readonly="1"/>
                    <field name="report_kind_opt" string="Reporte"/>
                    <field name="notes" placeholder="Notas adicionales para el reporte"/>
                </group>
                <footer>
                    <button name="action_print" string="Imprimir" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
