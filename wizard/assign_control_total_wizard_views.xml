<odoo>
  <record id="view_assign_control_total_wizard_form" model="ir.ui.view">
    <field name="name">assign.control.total.wizard.form</field>
    <field name="model">assign.control.total.wizard</field>
    <field name="arch" type="xml">
      <form string="Asignar Control Total" class="o_form_nosheet ct_assign_wizard">
        <sheet>
          <group col="1">
            <field name="status_html" widget="html" nolabel="1" readonly="1"/>
          </group>
          <group col="2">
            <field name="selected_product_id" readonly="1"/>
            <field name="selected_qty" readonly="1"/>
          </group>
          <group col="2">
            <field name="etiquetas_desde" placeholder="Ej: 54801"/>
            <field name="etiquetas_hasta" placeholder="Ej: 54821"/>
          </group>
          <group col="1">
            <field name="etiquetas_manuales"
                   string="Etiquetas manuales (alternativo al rango)"
                   placeholder="Ej: CS-54901
CS-54905
CS-54910"
                   widget="textarea"
                   class="o_form_textarea o_input"
                   style="height: 120px;"/>
          </group>
          <group col="1">
            <field name="etiquetas_adicionales"
                   string="Etiquetas adicionales"
                   placeholder="Ej: 54901
54902
54903"
                   widget="textarea"
                   class="o_form_textarea o_input"
                   style="height: 100px;"/>
          </group>

          <separator/>

          <group col="1">
            <field name="etiquetas_danadas"
                   string="Etiquetas daÃ±adas"
                   placeholder="Ej: 54801
54802
54803"
                   widget="textarea"
                   class="o_form_textarea o_input"
                   style="height: 100px; margin-top: 8px;"/>
          </group>
        </sheet>
        <footer>
          <button name="action_assign" type="object" string="Asignar" class="btn-primary"/>
          <button string="Descartar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
