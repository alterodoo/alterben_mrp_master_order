<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_import_result_wizard_form" model="ir.ui.view">
        <field name="name">mrp.import.result.wizard.form</field>
        <field name="model">mrp.import.result.wizard</field>
        <field name="arch" type="xml">
            <form string="Resultado de importación">
                <sheet>
                    <group>
                        <field name="summary" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Órdenes de fabricación">
                            <field name="error_message" readonly="1" nolabel="1"/>
                            <field name="production_ids" readonly="1">
                                <tree>
                                    <field name="origin" string="Errores / Origen"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cotizaciones">
                            <field name="sale_order_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="amount_total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Desechos">
                            <field name="scrap_ids" readonly="1">
                                <tree>
                                    <field name="import_stock_status"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="scrap_qty"/>
                                    <field name="production_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
