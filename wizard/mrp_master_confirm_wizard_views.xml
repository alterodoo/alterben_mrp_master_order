<odoo>
    <record id="view_mrp_master_confirm_wizard_form" model="ir.ui.view">
        <field name="name">mrp.master.confirm.wizard.form</field>
        <field name="model">mrp.master.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Orden Maestra" create="false" edit="false" class="o_form_nosheet">
                <sheet>
                    <group col="2">
                        <field name="master_id" readonly="1"/>
                        <field name="action_type" invisible="1"/>
                    </group>
                    <div class="o_alert o_alert_info" style="max-width:900px; margin-top:8px;">
                        <field name="message" nolabel="1" readonly="1" widget="html"/>
                    </div>
                </sheet>
                <footer>
                    <button name="action_accept" string="Aceptar" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
