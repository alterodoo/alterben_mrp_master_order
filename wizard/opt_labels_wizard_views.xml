<odoo>
    <record id="view_opt_labels_wizard_form" model="ir.ui.view">
        <field name="name">mrp.opt.labels.wizard.form</field>
        <field name="model">mrp.opt.labels.wizard</field>
        <field name="arch" type="xml">
            <form string="Imprimir etiquetas">
                <sheet>
                    <div class="oe_title">
                        <h3>Ingrese la cantidad de etiquetas disponibles de la primera hoja de cada color</h3>
                    </div>
                    <group col="1">
                        <field name="available_verde"/>
                        <field name="available_gris"/>
                        <field name="available_celeste"/>
                        <field name="available_blanco"/>
                        <field name="available_otro"/>
                    </group>
                    <group string="Resumen" col="1">
                        <field name="summary_message" nolabel="1" readonly="1" widget="html" class="o_full_width"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" type="object" string="Imprimir" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
