<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_workorder_novedades_summary_wizard_form" model="ir.ui.view">
    <field name="name">workorder.novedades.summary.wizard.form</field>
    <field name="model">workorder.novedades.summary.wizard</field>
    <field name="arch" type="xml">
      <form string="Resumen de Novedades" create="0" edit="0">
  <sheet>
    <group col="2">
      <field name="workorder_id" readonly="1"/>
      <field name="mo_id" readonly="1"/>
    </group>
    <separator string="Detalle"/>
    <group col="1">
      <field name="content" nolabel="1" readonly="1" widget="html"/>
    </group>
  </sheet>
  <footer>
    <button string="Cerrar" class="btn-primary" type="object" name="action_close" special="cancel"/>
  </footer>
</form>
    </field>
  </record>

  <record id="action_workorder_novedades_summary_wizard" model="ir.actions.act_window">
    <field name="name">Resumen de Novedades</field>
    <field name="res_model">workorder.novedades.summary.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'dialog_size': 'large'}</field>
  </record>
</odoo>
