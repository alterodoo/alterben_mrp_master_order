<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_scrap_confirm_wizard_form" model="ir.ui.view">
    <field name="name">alterben.workorder.scrap.confirm.wizard.form</field>
    <field name="model">alterben.workorder.scrap.confirm.wizard</field>
    <field name="arch" type="xml">
      <form string="Confirmación de Desecho">
        <sheet>
          <group col="1">
            <separator string="Confirmación"/>
            <field name="message" nolabel="1" readonly="1" class="ab_modal_message" style="white-space: pre-wrap;"/>
          </group>
        </sheet>
        <footer>
          <button name="action_with_scrap" type="object" class="btn-primary" string="Registrar la alerta con desecho"/>
          <button name="action_without_scrap" type="object" class="btn-secondary" string="Registrar la alerta sin desecho"/>
          <button name="action_back" type="object" string="Regresar" class="btn-link"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
